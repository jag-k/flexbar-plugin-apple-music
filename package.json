{
  "scripts": {
    "build": "rollup -c",
    "dev": "npm-run-all plugin:unlink plugin:link -p plugin:watch plugin:debug",
    "plugin:watch": "rollup -c -w --watch.onEnd=\"npm run plugin:restart\"",
    "plugin:unlink": "flexcli plugin unlink --uuid dev.jagk.apple_music --silent",
    "plugin:link": "flexcli plugin link --path dev.jagk.apple_music.plugin --uuid dev.jagk.apple_music --start false",
    "plugin:restart": "flexcli plugin restart --uuid=dev.jagk.apple_music",
    "plugin:debug": "flexcli plugin debug --uuid=dev.jagk.apple_music",
    "plugin:validate": "flexcli plugin validate --path dev.jagk.apple_music.plugin",
    "plugin:pack": "flexcli plugin pack --path dev.jagk.apple_music.plugin",
    "plugin:install": "flexcli plugin install --path ./dev.jagk.apple_music.flexplugin --force"
  },
  "type": "commonjs",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "glob": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rollup": "^4.0.2",
    "vuetify": "^3.8.3"
  },
  "dependencies": {
    "@eniac/flexdesigner": "^1.0.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "printWidth": 120
  }
}
